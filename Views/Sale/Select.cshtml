
@{
    ViewBag.Title = "Select";
    var list = ViewBag.list;
}

<h2>Select</h2>
<h3>
    共 @ViewBag.count
    筆資料
</h3>
<form action="/Sale/Select" method="post">
    <div class="row">
        <div class="col">
            <h4>工號</h4>
            <input type="text" class="form-control" name="employeeID">
        </div>
        <div class="col">
            <h4>姓名</h4>
            <input type="text" class="form-control" name="employeeName">
        </div>

        <div class="col">
            <h4>部門編號</h4>
            <input type="text" class="form-control" name="department">
        </div>
        <div class="col">
            <input type="submit" value="查詢" class="btn btn-warning"/>
        </div>
    </div>
</form>
<table class="table">
    <tr>
        <th>編號</th>
        <th>姓名</th>
        <th>部門編號</th>
        <th>修改</th>
    </tr>

    @foreach (employee item in list)
    {
        <tr>
            <td>@item.employeeID</td>
            <td>@item.employeeName</td>
            <td>@item.department</td>
            <td>@Html.ActionLink("修改", "Update", new { employeeID = item.employeeID }, new { @class = "btn btn-warning" })</td>
            <td>@Html.ActionLink("刪除", "Delete", new { employeeID = item.employeeID }, new { @class = "btn btn-danger" })</td>
        </tr>
    }

</table>