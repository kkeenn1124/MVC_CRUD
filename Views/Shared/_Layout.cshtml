<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="/Scripts/bootstrap.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <title>@ViewBag.Title - 我的 ASP.NET 應用程式</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary">


        <div class="container">
            @Html.ActionLink("公司首頁", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>



            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="nav-item dropdown">
                    <a onmouseover="click(this)" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color:white">
                        Home選單
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        @Html.ActionLink("網頁練習", "WebTest", "Home", new { area = "" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("資料表查詢", "Contact", "Home", new { area = "" }, new { @class = "dropdown-item" })

                    </div>
                </div>

                <div class="nav-item dropdown">
                    <a onmouseover="click(this)" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color:white">
                        MVC一次就上手練習選單
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        @Html.ActionLink("第四章 View檢視應用", "Index", "Test", new { area = "" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("第四章 會員註冊", "Create", "Test", new { area = "" }, new { @class = "dropdown-item" })

                    </div>
                </div>

                <div class="nav-item dropdown">
                    <a onmouseover="click(this)" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color:white">
                        全聯產品
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        @Html.ActionLink("產品表單", "shopselect", "shop", new { area = "" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("類別表單", "classselect", "shop", new { area = "" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("門市表單", "storeselect", "shop", new { area = "" }, new { @class = "dropdown-item" })

                    </div>
                </div>
                <div class="nav-item dropdown">
                    @Html.ActionLink("Sale主頁", "Index", "Sale", new { area = "" }, new { @class = "nav-link ", @style = "color:white" })
                    @*<a href="/Sale/index">Sale主頁</a>*@
                </div>
            </div>

        </div>

        <form class="d-flex" method="post" action="/Home/Login">

            <!--登入 彈跳式視窗-->
            <input type="button" class="btn btn-outline-light" data-toggle="modal" data-target="#SignInModal" value="登入" />

            <!--彈跳式視窗 內容-->
            <div class="modal fade" id="SignInModal" tabindex="-1" aria-labelledby="SignInModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="SignInModalLabel">登入帳號</h5>
                            <button class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <label for="Account">帳號</label>
                            <input type="text" class="form-control" id="NavAccount" name="帳號" />
                        </div>
                        <div class="modal-body">
                            <label for="Password">密碼</label>
                            <input type="Password" class="form-control" id="NavPassword" name="密碼" />

                        </div>
                        <div class="modal-footer">
                            @Html.ActionLink("註冊帳號", "Register", "Home", new { area = "" }, new { @href = "/Home/Register" })
                            <input type="submit" class="btn btn-primary" id="btnAdd" value="登入" />
                            <button class="btn btn-danger" data-dismiss="modal">關閉</button>

                        </div>
                    </div>
                </div>
            </div>
        </form>
    </nav>

    

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 夏裕凱製作</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
